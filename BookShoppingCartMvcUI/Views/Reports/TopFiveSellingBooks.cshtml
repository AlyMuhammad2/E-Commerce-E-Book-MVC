@model TopNSoldBooksVm

<h3>Top selling books</h3>
@if(Model!=null)
{
<div>
 <form class="my-2 d-flex" style="gap:5px" asp-action="TopFiveSellingBooks" method="get">
    <input type="date" style="width: 200px;" class="form-control" name="sDate"/>
    <input type="date" style="width: 200px;" class="form-control"  name="eDate"/>
    <button class="btn btn-primary">Filter</button>
    <a class="btn btn-primary" href="/Reports/TopFiveSellingBooks">Clear</a>
 </form>

 <h4>Showing Results from @Model.StartDate.ToString("dd-MMM-yyyy") to @Model.EndDate.ToString("dd-MMM-yyyy")</h4>

 @if(Model.TopNSoldBooks.Count()==0)
 {
     <div class="my-3" style="font-size:16px; font-weight:bold">
        No records found
     </div>
 }
 else
 {
 <table style="width: 50%;" class="table table-striped">
  <thead>
    <th>Book</th>
    <th>Sold Units</th>
  </thead>

  <tbody>
    @foreach (var item in Model.TopNSoldBooks)
    {
      <tr>
       <td>@item.BookName by @item.AuthorName</td>
       <td>@item.TotalUnitSold</td>
      </tr>
    }
  </tbody>
 </table>
 }
</div>
}
else
{
    <h4>Something went wrong</h4>
}
<style>
    .btn.btn-primary,
    .btn.btn-info {
        background: linear-gradient(90deg, rgba(87,120,150,1) 0%, rgba(29,74,115,1) 100%);
        border-radius: 6px 20px;
        padding: 5px 20px;
        color: white;
    }

    .btn.btn-primary:hover,
    .btn.btn-info:hover {
        background: linear-gradient(90deg, rgba(45,75,100,1) 0%, rgba(9,17,23,1) 100%);
    }

    .form-control,
    .form-control:focus {
        padding-left: 45px;
        border-radius: 30px !important;
        background-color: rgb(238,229,218);
        border: none;
        outline: none;
        color: rgb(122, 94, 87);
    }

    .form-control::placeholder {
        color: rgb(122, 94, 87);
    }
    
    .table-striped > tbody > tr:nth-of-type(odd) {
        --bs-table-accent-bg: rgb(238,229,218);
    }

    .table-striped > tbody > tr:nth-of-type(odd):hover {
        --bs-table-accent-bg: #7a5e57;
        color: white;
    }

    tr {
        text-align: center;
    }

    tr:first-of-type {
        background-color: rgb(238,229,218);
    }

    th {
        color: #7a5e57;
    }

    tr:hover {
        background-color: #7a5e57;
        color: white !important;
    }

    tr:hover th {
        color: white;
    }

    td {
        vertical-align: middle;
    }
    .table-striped > tbody > tr:nth-of-type(odd):hover td {
        color: white;
    }
</style>