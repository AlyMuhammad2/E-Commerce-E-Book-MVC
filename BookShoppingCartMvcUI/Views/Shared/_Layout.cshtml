<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EBookStore - Online book store</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <style>
        body {
        background-color: rgb(250, 248, 245) !important;
    }
    .navbar.navbar-expand-lg.navbar-dark.bg-primary {
        background-color: rgb(238,229,218) !important;
    }
    .bg-primary .navbar-nav .nav-link {
        color: rgb(122, 94, 87) !important;
    }
    .navbar-brand {
        color: rgb(122, 94, 87) !important;
    }
    .navbar-nav.me-auto {
        color: rgb(122, 94, 87) !important;
    }
    .bg-primary .navbar-nav .nav-link.active,
    .bg-primary .navbar-nav .nav-link:hover {
        color: rgb(83, 116, 146) !important;
    }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index"> <img src="/images/logo.png" style="height: 65px;" /> </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <img class="navbar-toggler-icon" src="/images/hamburger.png" />
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">Privacy</a>
                    </li>
                    @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/AdminOperations/Dashboard">Dashboard</a>
                        </li>
      
                    }
                   
                </ul>
                <partial name="_LoginPartial" />

            </div>
        </div>
    </nav>
    <div class="container">
        <div class="my-2">
            <partial name="_Notifications" />
        </div>
        @RenderBody()
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script>
        loadCartCount();
        async function loadCartCount() {
            try {
            var response = await fetch(`/Cart/GetTotalItemInCart`);
              console.log(response)    
                if (response.status == 200) {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch (err) {
                console.log(err);
            }
        }
</script>
</html>


@await RenderSectionAsync("Scripts", required: false)
<style>
    * {
        font-family: fantasy !important;
    }
</style>

