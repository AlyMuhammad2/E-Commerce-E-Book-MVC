@model IEnumerable<Genre>
@{
    Layout = "_AdminLayout";
}

<h2>Genres</h2>

<a asp-action="AddGenre" asp-controller="Genre" class="btn btn-primary">Add More</a>

<table class="table table-striped my-2">
    <tr>
        <th>Genre</th>
        <th>Action</th>
    </tr>

    @foreach(var genre in Model)
    {
        <tr>
            <td>@genre.GenreName</td>
            <td>
                <a asp-action="UpdateGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-success">Edit</a>
                <a asp-action="DeleteGenre" asp-controller="Genre" asp-route-id="@genre.Id" class="btn btn-danger" onclick="return window.confirm('Are you sure?')">Delete</a>
            </td>
        </tr>
    }
</table>
<style>
    th,
    td {
        text-align: center;
    }
    th {
        color: #7a5e57;
    }
    .table-striped > tbody > tr:nth-of-type(odd) {
        --bs-table-accent-bg: rgb(238,229,218);
    }
    .btn.btn-primary {
        background: linear-gradient(90deg, rgba(64,89,111,1) 0%, rgba(17,44,68,1) 100%);
        border-radius: 6px 20px;
        padding: 5px 20px;
        color: white;
        border: none;
    }
    .btn.btn-primary:hover {
        background: linear-gradient(90deg, rgba(40,67,90,1) 0%, rgba(0,0,0,1) 100%);
    }
    .btn.btn-success,
    .btn.btn-danger {
        border-radius: 6px 20px;
        padding: 5px 20px;
    }
</style>
