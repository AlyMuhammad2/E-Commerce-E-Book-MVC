@model GenreDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
<h2> Add Genre </h2>
<a asp-action="Index" asp-controller="Genre" class="btn btn-primary">Back</a>
<form asp-action="AddGenre">

   <div class="my-2">
      <label>Genre</label>
      <input type="text" class="form-control" asp-for="GenreName" />
            <span asp-validation-for="GenreName" class="text-danger"></span>
   </div>

   <div class="my-2">
      <button type="submit" class="btn btn-info">Add</button>
   </div>
</form>
</div>
<style>
    .btn.btn-primary,
    .btn.btn-info {
        background: linear-gradient(90deg, rgba(64,89,111,1) 0%, rgba(17,44,68,1) 100%);
        border-radius: 6px 20px;
        padding: 5px 20px;
        color: white;
        border: none;
    }
    .btn.btn-primary:hover,
    .btn.btn-info:hover {
        background: linear-gradient(90deg, rgba(40,67,90,1) 0%, rgba(0,0,0,1) 100%);
    }
    .form-control,
    .form-control:focus {
        border-radius: 30px !important;
        background-color: rgb(238,229,218);
        border: none;
        outline: none;
        color: rgb(122, 94, 87);
    }
</style>
