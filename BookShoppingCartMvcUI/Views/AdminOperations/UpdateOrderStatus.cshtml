@model UpdateOrderStatusModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdatePaymentStatus";
}

<h2>Update order status</h2>
<a class="my-2 btn btn-primary" asp-action="AllOrders">Back</a>

<form style="width: 50%;" asp-action="UpdateOrderStatus" class="pt-2">

    <input type="hidden" asp-for="OrderId" />

    <div class="mb-2">
        <label>Order status</label>
        <select class="form-control" asp-for="OrderStatusId" asp-items="@Model.OrderStatusList">
            <option value="">Select order status</option>
        </select>
        <span class="text-danger" asp-validation-for="OrderStatusId"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>

    @if (TempData["msg"] != null)
    {
        <div class="text-info my-2">
            @TempData["msg"]
        </div>
    }
</form>
<style>
    .btn.btn-primary,
    .btn.btn-info {
        background: linear-gradient(90deg, rgba(87,120,150,1) 0%, rgba(29,74,115,1) 100%);
        border-radius: 6px 20px;
        padding: 5px 20px;
        color: white;
    }

        .btn.btn-primary:hover,
        .btn.btn-info:hover {
            background: linear-gradient(90deg, rgba(45,75,100,1) 0%, rgba(9,17,23,1) 100%);
        }

    .form-control,
    .form-control:focus {
        padding-left: 45px;
        border-radius: 30px !important;
        background-color: rgb(238,229,218);
        border: none;
        outline: none;
        color: rgb(122, 94, 87);
    }

    .form-control::placeholder {
        color: rgb(122, 94, 87);
    }
</style>

